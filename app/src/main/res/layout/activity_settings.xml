<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/activity_settings_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    android:fitsSystemWindows="true"
    tools:context=".Views.PrivacyProtect.TouchIdActivity">

    <LinearLayout
        android:id="@id/ll_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@id/tb_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            android:layout_marginTop="@dimen/settings_item_content_margin_vertical"
                            android:text="@string/settings_style_title"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25sp" />

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_item_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="笔记样式"
                            app:value="瀑布流">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_item_theme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="主题样式"
                            app:value="日间模式">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            android:layout_marginTop="@dimen/settings_item_content_margin_vertical"
                            android:text="@string/settings_function_title"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25sp" />

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_item_quick_entrance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="状态栏便捷入口"
                            app:value="未开启">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            android:layout_marginTop="@dimen/settings_item_content_margin_vertical"
                            android:text="@string/settings_function_title"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25sp" />

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_item_privacy_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="@string/settings_privacy_switch"
                            app:value="@string/switch_open">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_item_privacy_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="@string/settings_priovacy_type_title"
                            app:value="@string/privacy_type_touch_id">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>

                        <com.skkk.boiledwaternote.CostomViews.SettingItemView
                            android:id="@id/settings_graphy_unlock_set"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/settings_item_content_margin_vertical"
                            android:layout_marginStart="@dimen/settings_item_content_margin_horizontal"
                            app:title="@string/settings_graphy_unlock_title"
                            app:value="@string/settings_graphy_unlock_new_password">
                        </com.skkk.boiledwaternote.CostomViews.SettingItemView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
